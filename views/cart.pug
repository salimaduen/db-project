extends layout

block content 
    h1 Your Shopping Cart
    - let total = 0.0;
    if Object.keys(items).length > 0
        - for (let item of items)
            .cart-item
                h2= item.Name
                p Price: #{item.Price}
                p Quantity: #{item.Quantity}
                p Total: #{item.Price * item.Quantity}
                - total += parseFloat(item.Price);
                - console.log(`CURR : ${item.Price} TOTAL : ${total}`);

        p.cart-total=total.toFixed(2)

    else
        p Your cart is empty