extends layout

block content 
    h1 Your Shopping Cart
    if Object.keys(items).length > 0
        - for (let item of items)
            .cart-item
                h2= item.Name
                p Price: #{item.Price}
                p Quantity: #{item.Quantity}
                p Total: #{item.Price * item.Quantity}

        p.cart-total 

    else
        p Your cart is empty