doctype html
html
  head
    title Login
    link(rel='stylesheet', href='/stylesheets/authStyles.css')
  body
    h1 Welcome to Our Virtual Store!
    
    if error
      p.error #{error}
    form(action='/login', method='post')
      
      p Please login or register to view our products.
      
      label(for='username')
      input(type='text', name='username', placeholder= " Username ", required)
      br
      label(for='password')
      input(type='password', name='password', placeholder= " Password ", required)
      br
      button(type='submit') Login
      a(href='/register') Register
